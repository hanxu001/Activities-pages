/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: center;
  border-bottom: 1rpx solid #f2f2f2;
  width: 94%;
  margin-left: 6%;
  padding: 20rpx 0rpx;
}
.l1{
  font-size: 24rpx;
  color: #999;
}
.l2,.l3{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}
.l21{
  flex: 2;
  font-size: 34rpx;
  color: #4d4d4d;
}
.l22{
  flex: 2;
  text-align: right;
  font-size: 40rpx;
  color: #575D69;
}
.l23{
  flex: 3;
  text-align: right;
  padding-right: 30rpx;
  font-size: 40rpx;
  /* color: #575D69; */
}
.l31{
  flex: 2;
  font-size: 28rpx;
  color: #999;
}
.l32{
  flex: 2;
  text-align: right;
  font-size: 28rpx;
  color: #999;
}
.l33{
  flex: 3;
  text-align: right;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #999;
}
.more{
  text-align: center;
  padding: 30rpx;
  font-size: 30rpx;
  color: #999;
}